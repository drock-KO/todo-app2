<h1>Tasks#edit</h1>
<div class="task-form">
    
	<%= form_with model: [@project, @task], local: true, id: "edit-task" do |f| %>
	  <%#= f.hidden_field :project_id, :value => @project.id %>
	  <%= f.text_field :task, placeholder: "タスク名" %><br>
	  <%= f.text_area :text, placeholder: "タスクの詳細", rows: "2", class: "taskbox" %><br>
		<%= f.date_field :deadline, class: "datebox" %><br>
		<%= f.time_field :deadline_time, class: "timebox" %><br>
	  <%= f.submit "UPDATE", class: "form-submit" %>
	<% end %>
</div>
<%= render partial: 'common/project_path', locals: { project: @project } %>